# Smart Cane 裝置環境設定範例

# 平台與感測
SMART_CANE_PLATFORM=pi4
SMART_CANE_USE_SIMULATED=false
# 預設使用第一台 (index 1) 相機，可用 `SMART_CANE_CAMERA_INDEX` 覆寫
SMART_CANE_CAMERA_INDEX=1

# OpenVINO 模型
SMART_CANE_OPENVINO_ENABLED=true
SMART_CANE_OPENVINO_MODEL_XML=/home/pi/models/person-detection-retail-0013.xml
SMART_CANE_OPENVINO_MODEL_BIN=/home/pi/models/person-detection-retail-0013.bin
SMART_CANE_OPENVINO_DEVICE=CPU
SMART_CANE_OPENVINO_CONFIDENCE=0.6

# pyttsx3 設定
SMART_CANE_TTS_RATE=160
SMART_CANE_TTS_VOLUME=0.8

# 其他
OPENAI_API_KEY=your-secret-key
SMART_CANE_LOG_DIR=./logs
